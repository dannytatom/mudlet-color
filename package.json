{
  "name": "mudlet-color",
  "version": "1.0.1",
  "description": "Small CLI utility to set color themes for Mudlet profiles.",
  "repository": "https://github.com/dannytatom/mudlet-color",
  "author": "Danny Tatom <dannytatom@gmail.com>",
  "license": "MIT",
  "bin": {
    "mudlet-color": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext .ts ./src",
    "fix": "eslint --ext .ts ./src --fix && prettier --write '**/*.ts' ./src"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn fix",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {
    "js-yaml": "^3.14.0",
    "xml2js": "^0.4.23",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^3.12.4",
    "@types/node": "^14.0.13",
    "@types/xml2js": "^0.4.5",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  }
}
